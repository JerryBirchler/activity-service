{
  "server": {
    "port": 8081,
    "prefix": "/activity-service"
  },
  "log4js": {
    "appenders": {
      "console": {
        "type": "console",
        "layout": {
          "type": "basic"
        }
      }
    },
    "categories": {
      "default": {
        "appenders": ["console"],
        "level": "debug"
      }
    }
  },
  "caching": {
    "caches": [
      {
        "store": "memory",
        "max": 100,
        "ttl": 300
      }
    ]
  },
  "access-code": {
    "segments": 2,
    "ttl-days": 7,
    "max-retries": 1000
  },
  "cache-ttl-seconds": 300,
  "cache-key-prefix": "activity_service"
}
